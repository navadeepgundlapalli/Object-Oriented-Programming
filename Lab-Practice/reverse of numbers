#include <iostream>
using namespace std;

int main(){
    int num;
    int reverse = 0;
    cout << "enter the numer:";
    cin >> num;

    while (num > 0)
    {
        int digit = num % 10;
        reverse = reverse * 10 + digit;
        num /=10;
    }
    cout<< "the reverse number is:"<<reverse<<endl;
    return 0;
}
