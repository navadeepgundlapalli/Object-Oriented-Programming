#include<iostream>
using namespace std;
float ftoc(float f){
    return (f - 32) * 5.0 / 9.0;
}
float ctof(float c){
    return (c * 9.0 /5.0) + 32;
}
int main(){
    float f, c;
    cout << "Enter the temperature in Fahrenheit:";
    cin >> f;
    cout << "The temperature in centigrade:" << ftoc(f)<<endl;

    cout << "Enter the temperature in centigrade: ";
    cin>> c;
    cout << "The temperature in fahrenheit:"<< ctof(c)<<endl;
    return 0;
}
